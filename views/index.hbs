<h1>{{title}}</h1>
<p>Welcome to {{title}}</p>
<br>
{{#each allEvents}}
<h2>{{this.title}}</h2>

{{#if this.soldOut}}
<h3>SOLD OUT</h3>
{{else}}
<h3>{{this.tickets}}/{{this.capacity}}</h3>
{{/if}}

<ul>
  <li>{{this.description}}</li>
  <li>{{this.start_time}}</li>
  <li>{{this.end_time}}</li>
  {{#if this.over_21}}
  <h5>This event is 21+</h5>
  {{/if}}
</ul>
<a href="/events/{{this.id}}/register">Register now</a>
{{/each}}
